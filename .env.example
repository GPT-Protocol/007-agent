# AI Provider Configuration
# Choose between 'openai' or 'ollama'
AI_PROVIDER=openai

# OpenAI Configuration
# Required if using OpenAI provider
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here
# Model to use for text-only tasks
OPENAI_MODEL=gpt-4
# Model to use for vision tasks
OPENAI_VISION_MODEL=gpt-4-vision-preview

# Ollama Configuration
# Required if using Ollama provider
# URL where Ollama is running
OLLAMA_BASE_URL=http://localhost:11434
# Model to use for text-only tasks (e.g., mistral, llama2)
OLLAMA_MODEL=mistral
# Model to use for vision tasks (must be a multimodal model)
OLLAMA_VISION_MODEL=llava

# Development Features
# Set to 'true' to enable detailed logging to files
# Logs will be saved in the LOG_DIR directory
ENABLE_LOGGING=false

# Set to 'true' to save screenshots to disk
# Screenshots will be saved in the SCREENSHOT_DIR directory
# Useful for debugging navigation issues
ENABLE_SCREENSHOTS=false

# Directory paths (relative to project root)
SCREENSHOT_DIR=screenshots
LOG_DIR=logs

# Browser Configuration
# Viewport dimensions for the headless browser
# Recommended to use standard desktop dimensions
BROWSER_WIDTH=1280
BROWSER_HEIGHT=800

# Timeouts in milliseconds
# Increase these values on slower connections
NAVIGATION_TIMEOUT=30000    # Time to wait for page navigation (30 seconds)
NETWORK_IDLE_TIMEOUT=10000  # Time to wait for network to be idle (10 seconds)

# Example values for development:
# ENABLE_LOGGING=true
# ENABLE_SCREENSHOTS=true
# NAVIGATION_TIMEOUT=60000  # 60 seconds for slower connections 